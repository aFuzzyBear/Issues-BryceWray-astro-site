---
import { format } from "date-fns";
import Head from '@components/Head.astro';
import Header from '@components/Header.astro';
import Post from '@components/PostComp.astro';
import Footer from '@components/Footer.astro';
// import Billboard from '@components/Billboard.astro';
import Comments from '@components/Comments.astro';

let allPosts = await Astro.glob('../pages/posts/**/*.mdx');
allPosts = allPosts
  .filter(post => !post.frontmatter.draft)
  .sort((a, b) =>
    new Date(b.frontmatter.date).valueOf() - new Date(a.frontmatter.date).valueOf()
);
let postsNumber = allPosts.length;

const { content, page } = Astro.props;
const { title, subtitle, description, date, lastmod, permalink } = content;
const thisUrl = new URL(Astro.request.url);
let nextUrl, nextTitle, prevUrl, prevTitle, addSlash = "";
let envMode = import.meta.env.MODE;
if (envMode == "production") {
  addSlash = "/";
}

// changes in 1.0.0-beta.18 forced some adjustments here -
// addSlash is "/" in PRODUCTION and
// we add addSlash to thisUrl.pathname, NOT allPosts[x].url (below)
// === otherwise, no match and no prev/next display at bottom
//
// - 2022-04-27-1442CDT

// console.log("thisUrl.pathname = " + thisUrl.pathname);


for(let x = 0; x < postsNumber; x++) {
  if(thisUrl.pathname + addSlash === allPosts[x].url){
    // console.log(allPosts[x].url);
    if (x > 0) {
      nextUrl = allPosts[x-1].url;
      nextTitle = allPosts[x-1].frontmatter.title;
    }
    if (x < postsNumber - 1) {
      prevUrl = allPosts[x+1].url;
      prevTitle = allPosts[x+1].frontmatter.title;
    }
  }
}
---

<style lang="scss">
  @use '../styles/variables' as var; // SCSS partial
  .billboard {
    &-div {
      font-family: var.$sans-serif;
      text-align: center;
      position: relative;
      height: auto;
      padding-right: 2em;
      padding-left: 2em;
      padding-bottom: 1em;
      @media screen and (min-width: var.$bkpt_lg) {
        padding-right: 4rem;
        padding-left: 4rem;
      }
      @media screen and (min-width: var.$bkpt_2xl) {
        padding-right: 8rem;
        padding-left: 8rem;
      }
    }
    &-title-block {
      display: block;
      width: 100%;
      padding-top: 1em;
    }
    &-title-block-fit {
      display: block;
      width: 100%;
    }
    &-title-text, &-subtitle-text, &-description-text {
      margin: 0 auto;
      text-align: center;
      padding-right: 2%;
      padding-left: 2%;
      @media screen and (min-width: var.$bkpt_lg) {
        text-align: left;
        padding-right: 3%;
        padding-left: 3%;
      }
      @media screen and (min-width: var.$bkpt_2xl) {
        padding-right: 4%;
        padding-left: 4%;
      }
    }
    &-title-text {
      font-size: 2.25em;
      font-weight: 800;
      @media screen and (prefers-color-scheme: dark) {
        font-weight: 750;
      }
      padding-top: 1em; // definitely em, not rem
      line-height: 1.1;
      letter-spacing: -0.0375em;
      @media screen and (min-width: var.$bkpt_md) {
        font-size: 3em;
      }
      @media screen and (min-width: var.$bkpt_lg) {
        font-size: 3.5rem;
      }
      @media screen and (min-width: var.$bkpt_xl) {
        font-size: 4em;
      }
    }
    &-subtitle-text {
      font-size: 1.75rem;
      padding-top: 0.75em; // definitely em, not rem
      padding-bottom: 0.25em; // definitely em, not rem
      line-height: 1.25;
      letter-spacing: -0.04em;
      @media screen and (min-width: var.$bkpt_md) {
        font-size: 2.5rem;
        padding-top: 0.5em;
      }
      @media screen and (min-width: var.$bkpt_lg) {
        font-size: 2.875rem;
      }
      @media screen and (min-width: var.$bkpt_2xl) {
        font-size: 3.25rem;
      }
    }
    &-description-text {
      font-size: 1rem;
      // font-family: var.$serif;
      padding-top: 1em; // definitely em, not rem
      letter-spacing: -0.01em;
      line-height: 1.4;
      @media screen and (min-width: var.$bkpt_md) {
        font-size: 1.25rem;
      }
      @media screen and (min-width: var.$bkpt_lg) {
        font-size: 1.5rem;
        // handle italics/obliques in the partial with `em` (covers different fonts' handling thereof)
        letter-spacing: -0.025em;
      }
      @media screen and (min-width: var.$bkpt_2xl) {
        font-size: 1.75rem;
      }
      @media screen and (min-width: var.$bkpt_3xl) {
        font-size: 2rem;
      }
    }
    &-p-text {
      font-size: 1rem;
      line-height: 1.25;
      margin-top: 1.5em;
      text-align: center;
      @media screen and (min-width: var.$bkpt_md) {
        font-size: 1.25rem;
        line-height: 1.175;
      }
      @media screen and (min-width: var.$bkpt_lg) {
        font-size: 1.375rem;
        line-height: 1.1;
        text-align: right;
      }
      @media screen and (min-width: var.$bkpt_2xl) {
        font-size: 1.5rem;
      }
    }
  }

	.bg-dark {
    // font-family: var.$sans-serif;
    margin-top: 2.5rem;
    background-color: var.$black;
    @media (prefers-color-scheme: dark) {
      background-color: var.$darkblue;
    }
    padding: 0.5rem 0 1rem 0;
    div, p {
      color: hsl(0, 0%, 100%);
    }
    h3, p {
      margin: 0;
      padding: 0.15rem 0;
      font-style: normal;
    }
    h3.prevnextH3 {
      font-size: 1.875rem;
    }
    p.prevnextP {
      width: 90%;
      margin-right: auto;
      margin-left: auto;
      font-size: 1.375rem;
    }
    a {
      color: hsl(204, 100%, 83%);
      border-bottom: 0;
    }
    a:hover, a:focus {
      color: var.$grey-2;
      border-bottom: 1px solid hsl(204, 100%, 83%);
    }
  }
  .contactBtn {
    border-top: 1px solid var.$black;
    font-family: var.$sans-serif;
    text-align: center;
    margin: auto;
    padding-bottom: 1rem;
    padding-top: 1rem;
    button {
      padding: 1rem;
      background-color: var.$darkblue;
      border-radius: 0.375rem;
      border-color: transparent;
      vertical-align: middle;
      color: var.$white;
      &:focus, &:active, &:hover {
        background-color: var.$blue;
      }
      @media (prefers-color-scheme: dark) {
        background-color: var.$code-color-blueLight-dark-mode;
        &:focus, &:active, &:hover {
          background-color: var.$blueLightBtn;
        }
      }
      a {
        color: var.$white;
        border: none;
        @media (prefers-color-scheme: dark) {
          color: var.$black;
        }
      }
    }
  }
  .arrowStop {
    color: var.$greyArrow;
  }
</style>

<html lang={content.lang || 'en'}>
	<head>
		<Head {title} {description} {permalink} />
	</head>

	<body>
		<Header />
    <main>
			<div class="billboard-div">
				<div class="billboard-title-block">
					<h1 class="billboard-title-text">{title}</h1>
					{description && (
						<p class="billboard-description-text">{description}</p>
					) || (
						<p>&nbsp;</p>
					)}
					<p class="billboard-p-text">
						<strong>{format(new Date(date), "MMMM d, yyyy")}</strong><br />
						{lastmod && (
							<span class="pokey">Last modified {format(new Date(lastmod), "MMMM d, yyyy")}</span>
						) || (
							<span class="pokey">&nbsp;</span>
						)}
					</p>
				</div>
			</div>
			<Post >
				<slot />
        <div class="contactBtn">
          <button>
            <a href=`mailto:bw@brycewray.com?subject=Re: “${title}”`>
              <svg aria-hidden="true" class="inline" role="img" height="2em" width="2em" viewBox="0 0 512 512" xmlns="http://www.w3.org/2000/svg"><path fill="currentColor" d="M464 64H48C21.49 64 0 85.49 0 112v288c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V112c0-26.51-21.49-48-48-48zm0 48v40.805c-22.422 18.259-58.168 46.651-134.587 106.49-16.841 13.247-50.201 45.072-73.413 44.701-23.208.375-56.579-31.459-73.413-44.701C106.18 199.465 70.425 171.067 48 152.805V112h416zM48 400V214.398c22.914 18.251 55.409 43.862 104.938 82.646 21.857 17.205 60.134 55.186 103.062 54.955 42.717.231 80.509-37.199 103.053-54.947 49.528-38.783 82.032-64.401 104.947-82.653V400H48z"></path></svg>&nbsp;&nbsp;<strong>Reply via email</strong>
            </a>
            <noscript><br /><span class="legal">[Requires JavaScript activation,<br />due&nbsp;to <span class="nobrk">Cloudflare bot-blocking]</span></span></noscript>
          </button>
        </div>
        <Comments />
			</Post>
      <div class="bg-dark sansSerif">
        <h3 class="ctr wht prevnextH3"><a href="/posts/" class="border-transparent text-blue-100 hover:text-white">Other posts</a></h3>
        {nextTitle &&
          <p class="ctr prevnextP">
            Next: <a class="next" href={nextUrl}>{nextTitle}</a>
          </p>
        }
        {prevTitle &&
          <p class="ctr prevnextP">
            Previous: <a class="previous" href={prevUrl}>{prevTitle}</a>
          </p>
        }
      </div>
    </main>
    <Footer />
	</body>
</html>
